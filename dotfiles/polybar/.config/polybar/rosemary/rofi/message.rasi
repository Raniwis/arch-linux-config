/* Confirm Dialog */

@import                     "shared/colors.rasi"
@import                     "shared/fonts.rasi"

* {
    background-color:       @bg;
    text-color:             @fg;
	font:				 	@font;
}

window {
    width:      			320px;
    padding:    			25px;
    border:					1px;
    border-radius:          0px;
    border-color:           @ac;
    location:               center;
    y-offset:               -2em;
}

entry {
    expand: 				true;
    text-color:				@ac;
}
